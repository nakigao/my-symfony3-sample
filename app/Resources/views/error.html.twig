{% if errors is defined and errors is not empty %}
    <div class="container">
        <div class="row" style="margin-top: 10px;">
            <div class="col-sm-12">
                {% for error in errors %}
                    <p>Error: {{ error.message }}</p>
                {% endfor %}
            </div>
        </div>
    </div>
{% else %}
    {# nothing to show #}
{% endif %}